<?xml version="1.0" encoding="UTF-8"?>
<Window >
<VerticalLayout height="250" bordersize="1" bordercolor="FFE0E0E0">
	<Control height="5" />
	<!--组标题-->
	<HorizontalLayout height="25">
		<Button width="25" height="25" normalimage="file='default\arrow_up.png' dest='3,3,20,20'" tooltip="收起"/>
		<Edit minwidth="150" height="25" bkcolor="#FFD0D4D8" nativebkcolor="#FFD0D4D8" text="默认组的组名" bkimage="file='default\buttom_border_#999999.png'"/>
		<Button width="25" height="25" normalimage="file='default\add.png' dest='3,3,19,19'" tooltip="添加绑定"/>
		<Button width="25" height="25" normalimage="file='default\save.png' dest='3,3,19,19'" tooltip="保存组名"/>
		<Button width="25" height="25" normalimage="file='default\delete.png' dest='3,3,19,19'" tooltip="删除该组"/>
	</HorizontalLayout>
	<Control height="5" />
	<!--组内容，可隐藏-->
	<VerticalLayout  height="200" vscrollbar="true" autovscroll="true">
	</VerticalLayout>
</VerticalLayout>
</Window>